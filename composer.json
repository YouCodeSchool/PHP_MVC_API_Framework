{
    "name": "php_mvc_api/framework",
    "description": "Simple PHP API framework with MVC architecture, JWT Token Authentication and custom error handling",
    "authors": [
        {
            "name": "KhomsiAdam",
            "email": "khomsiadam@gmail.com"
        }
    ],
    "config": {
        "vendor-dir": "composer_vendor"
    },
    "require": {
        "firebase/php-jwt": "^5.3",
        "vlucas/phpdotenv": "^5.3"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "App\\Config\\": "app/config/",
            "App\\Controller\\": "app/controllers/",
            "App\\Model\\": "app/models/",
            "App\\View\\": "app/views/"
        }
    },
    "scripts": {
        "serve": [
            "@php -S localhost:8080 -t public public/index.php"
        ]
    }
}
